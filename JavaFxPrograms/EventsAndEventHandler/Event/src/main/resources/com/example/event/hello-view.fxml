<GridPane alignment="CENTER" xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.event.HelloController">

        <TextField fx:id="textField"  GridPane.columnIndex="0" GridPane.rowIndex="0" onKeyReleased="#keyReleased"/>

   <Button fx:id="Hello" text="Say Hello" GridPane.rowIndex="1" GridPane.columnIndex="0"
            onAction="#OnClickButton" />
    <Button fx:id="Bye" text="Say Bye" GridPane.rowIndex="1" GridPane.columnIndex="2"
            onAction="#OnClickButton" />

<CheckBox fx:id = "checkBox" text="Clear the text in the Box"  GridPane.columnIndex="0" GridPane.rowIndex="2" onAction="#clearText"/>
    <Label fx:id="doLabel" text="Nothing happen" GridPane.columnSpan="3" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

</GridPane>
